<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameplayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reader_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Čita:"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_guesser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Odgovara:"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

        <Button
            android:id="@+id/button_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_color"
            android:text="Start"
             />

        <TextView
            android:id="@+id/text_view_count_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@drawable/red_color"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
             />

        <TextView
            android:id="@+id/text_view_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@drawable/blue_color"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
             />

        <TextView
            android:id="@+id/text_view_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@drawable/blue_color"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:text="Trenutni rezultat: " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_correct"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/green_color"
                android:text="Točno" />

            <Button
                android:id="@+id/button_pass"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/red_color"
                android:text="Dalje" />
        </LinearLayout>



    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>